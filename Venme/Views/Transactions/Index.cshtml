@model IEnumerable<Venme.Models.Transaction>

@{
    ViewBag.Title = "Index";
}

<head>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $j = jQuery.noConflict();
        $j( function() {
            $j( "#datepicker" ).datepicker();
        } );
    </script>
</head>


<h2>Index</h2>



@using (Html.BeginForm())
{
    <p>
        Find by date: @Html.TextBox("datepicker")
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FromUser.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FromUserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToUserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FromUser.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FromUserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ToUserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
